
#:include profilephotoscreen

#:import utils kivy.utils


Screen:
  NavigationLayout:
    ScreenManager:
      id: screen_manager
        size_hint:  1,  1
          pos_hint: {"top": 1, "left": 1}


ProfilePhotoScreen:
    name: "profilephoto_screen"
    id: profilephoto_screen
MDNavigationDrawer :
    id : nav_drawer
    BoxLayout :
         orientation : 'vertical'
         spacing : '8dp'
         padding : '8dp'
         ImageButton:
             id: profile
             source: pic.jpg
             canvas.before:
                 Color:
                     rgb: app.theme_cls.primary_color if self.state == 'normal' else utils.get_color_from_hex("#6C5B7B")
                 Rectangle:
                     size: self.size
                     pos: self.pos
              on_release:
                  nav_drawer.toggle_nav_drawer()
                  app.change_screen("profilephoto_screen", direction='right', mode='push')
         MDLabel :
              text : 'Profile Picture'
              font_style : 'Subtitle1'
              size_hint_y : None
              height : self.texture_size[1]

